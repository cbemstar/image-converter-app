{
  "name": "image-converter-app",
  "version": "1.0.0",
  "description": "A browser-based image conversion tool that allows you to convert images between various formats including WebP, JPEG, PNG, AVIF, BMP, TIFF, GIF, and ICO. The app also supports special formats like HEIC/HEIF and RAW camera formats.",
  "main": "background-remover.js",
  "scripts": {
    "test": "jest",
    "test:db": "bash supabase/tests/run_tests.sh",
    "test:rls": "jest --testNamePattern=\"Database RLS\"",
    "test:functions": "jest --testNamePattern=\"Database Functions\"",
    "test:integration": "jest --testNamePattern=\"integration\"",
    "test:performance": "node scripts/run-performance-tests.js",
    "test:load": "jest --testNamePattern=\"load|performance\" --testTimeout=180000",
    "test:all": "npm run test:db && npm test && npm run test:performance",
    "build": "npm run copy-files && npm run generate:public-config",
    "build:production": "npm run copy-files && npm run generate:production-config",
    "copy-files": "mkdir -p public && cp -r *.html *.js js styles tools api public/ 2>/dev/null || true",
    "build:config": "node scripts/generate-supabase-config.js",
    "generate:public-config": "node scripts/generate-public-config.js && cp js/public-config.js public/js/",
    "generate:production-config": "node scripts/generate-production-config.js && cp js/production-config.js public/js/",
    "stripe:setup-test": "node scripts/setup-stripe-products.js --environment=test --update-database",
    "stripe:setup-prod": "node scripts/setup-stripe-products.js --environment=production --update-database",
    "stripe:dry-run": "node scripts/setup-stripe-products.js --dry-run",
    "stripe:configure-prod": "node scripts/configure-stripe-production.js",
    "stripe:validate-webhooks": "node scripts/validate-stripe-webhooks.js",
    "deploy:production": "node scripts/deploy-production.js",
    "deploy:dry-run": "node scripts/deploy-production.js --dry-run",
    "deploy:pipeline": "node scripts/deploy-pipeline.js",
    "deploy:pipeline-dry-run": "node scripts/deploy-pipeline.js --dry-run",
    "setup:monitoring": "node scripts/setup-production-monitoring.js",
    "backup:create": "node scripts/backup-and-recovery.js backup",
    "backup:validate": "node scripts/backup-and-recovery.js validate",
    "backup:recovery-plan": "node scripts/backup-and-recovery.js recovery-plan",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.39.0",
    "jest": "^30.0.5",
    "pdf-lib": "^1.17.1",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "supabase": "^1.191.3"
  }
}
